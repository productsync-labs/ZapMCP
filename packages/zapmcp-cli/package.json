{
  "name": "zapmcp-cli",
  "version": "0.1.0",
  "description": "Command line interface for ZapMCP framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "zapmcp": "dist/index.js"
  },
  "scripts": {
