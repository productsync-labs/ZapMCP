{
  "name": "zapmcp-cli",
  "version": "0.1.0",
  "description": "Command line interface for ZapMCP framework",
  "type": "module",
  "bin": {
    "zapmcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/index.ts --format esm --watch --dts",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "pub:beta": "pnpm build && pnpm publish --no-git-checks --access public --tag beta",
    "pub:release": "pnpm build && pnpm publish --access public"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.5.0",
    "eslint": "^8.48.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "splitting": true,
    "sourcemap": true,
    "clean": true,
    "dts": true
  }
}
